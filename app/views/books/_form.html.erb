<%= form_with model: book, html: { class: "book-form" } do |form| %>
    <div class="form-group">
        <%= form.label :title, class: "form-label" %>
        <%= form.text_field :title, class: "form-input" %>
    </div>

    <div class="form-group">
        <%= form.label :author, class: "form-label" %>
        <%= form.text_field :author, class: "form-input" %>
    </div>

    <div class="form-group">
        <%= form.label :description, class: "form-label" %>
        <%= form.text_area :description, class: "form-textarea" %>
    </div>

    <div class="form-group">
        <%= form.label :featured_image, class: "form-label" %>
        <%= form.file_field :featured_image, accept: "image/*", class: "form-file" %>
    </div>

    <div class="form-actions">
        <%= form.submit "Submit", class: "form-submit" %>
        <%= link_to "Cancel", book.persisted? ? book : books_path, class: "cancel-link" %>
    </div>
<% end %>
