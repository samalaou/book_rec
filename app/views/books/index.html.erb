<div class="books-header">
  <h1>Books</h1>
  <%= link_to "New Book", new_book_path, class: "btn" if authenticated? %>
</div>

<div class="books">
  <% @books.each do |book| %>
    <%= link_to book_path(book), class: "book-card" do %> 
        <h2><%= book.title %></h2>
        <%= image_tag book.display_image, alt: book.title, width: 150, height: 200 %>
        <br>
    <% end %>
  <% end %>
</div>
