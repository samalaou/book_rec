<nav>
  <div class="nav-left">
    <%= link_to "Home", root_path, class: "nav-link" %>
  </div>

  <div class="nav-right">
    <%= form_with url: set_theme_path, method: :get, local: true do %>
      <%= label_tag :theme, "Theme:", class: "theme-label" %>
      <%= select_tag :theme, 
        options_for_select([['Light', 'light'], ['Dark', 'dark'], ['Default', '']], cookies[:theme]),
        class: "btn",
        onchange: 'this.form.submit();'
      %>
    <% end %>

    <% unless authenticated? %>
      <%= link_to "Log in", new_session_path, class: "nav-link" %>
      <%= link_to "Sign up", new_registration_path, class: "nav-link" %>
    <% else %>
      <%= button_to "Log out", session_path, method: :delete, class: "btn" %>
    <% end %>
  </div>
</nav>
