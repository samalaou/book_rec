<h1>Sign up</h1>
<%= form_with model: @user, url: registration_url, class: "contents" do |form| %>
    <div>
        <%= form.text_field :name, required: true, placeholder: "Enter your name", value: params[:name] %>
    </div>

    <div>
        <%= form.email_field :email_address, required: true, placeholder: "Enter your email address", value: params[:email_address] %>
    </div>

    <div>
        <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Enter your password" %>
    </div>
   
    <div>
        <%= form.password_field :password_confirmation, required: true, autocomplete: "current-password", placeholder: "Confirm your password" %>
    </div>

    <%= form.submit "Sign up" %>
    <%= link_to "Forgot password?", new_password_path %>
<% end %>
