<div class="form-container">
    <h1>Sign up</h1>
    <%= form_with model: @user, url: registration_url do |form| %>
        <div class="form-group">
            <%= form.text_field :name, required: true, placeholder: "Enter your name", value: params[:name], class: "form-input" %>
        </div>

        <div class="form-group">
            <%= form.email_field :email_address, required: true, placeholder: "Enter your email address", value: params[:email_address], class: "form-input" %>
        </div>

        <div class="form-group">
            <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Enter your password", class: "form-input" %>
        </div>
    
        <div class="form-group">
            <%= form.password_field :password_confirmation, required: true, autocomplete: "current-password", placeholder: "Confirm your password", class: "form-input" %>
        </div>

        <div class="form-actions">
            <%= form.submit "Sign up", class: "form-submit" %>
            <%= link_to "Forgot password?", new_password_path, class: "forgot-password-link" %>
        </div>
    <% end %>
</div>